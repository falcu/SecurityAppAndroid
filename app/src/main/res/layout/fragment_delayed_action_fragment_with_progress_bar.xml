<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guido.securityapp.fragments.DelayedActionFragmentWithProgressBar">

    <ImageButton
        android:id="@+id/alarm_action"
        android:adjustViewBounds="true"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:background="@drawable/panic_icon"
        android:text="Text to set"/>

    <ProgressBar
        android:id="@+id/progress_bar_timer"
        android:progress="0"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
