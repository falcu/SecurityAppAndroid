<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guido.securityapp.activities.GroupConfigurationCreatorActivity">

    <fragment
        android:id="@+id/progress_bar_fragment"
        android:name="com.example.guido.securityapp.fragments.ProgressBarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_progress_bar"></fragment>

    <ScrollView
        android:id="@+id/group_configuration_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/group_configuration_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:layout_marginBottom="20dp"
                android:id="@+id/options_fragment"
                android:name="com.example.guido.securityapp.fragments.OptionsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragments_options_layout"></fragment>

        </LinearLayout>




    </ScrollView>

</LinearLayout>
