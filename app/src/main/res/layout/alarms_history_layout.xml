<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/alarm_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/panic_icon_small" />

        <TableLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                <TextView android:text="Sender: "/>

                <TextView android:id="@+id/alarm_sender" android:text="User's name with email"/>
            </TableRow>

            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView  android:text="Message: "/>
                <TextView android:id="@+id/alarm_message"  android:text="The message"/>
            </TableRow>

        </TableLayout>

    </TableRow>

</TableLayout>